<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UploadImageServlet</servlet-name>
        <servlet-class>br.senac.sp.servlet.UploadImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteImageServlet</servlet-name>
        <servlet-class>br.senac.sp.servlet.DeleteImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Servlet_Save</servlet-name>
        <servlet-class>br.senac.sp.servlet.Product_Servlet_Save</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Servlet</servlet-name>
        <servlet-class>br.senac.sp.servlet.Product_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductList_Servlet</servlet-name>
        <servlet-class>br.senac.sp.servlet.ProductList_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Servlet_Alter</servlet-name>
        <servlet-class>br.senac.sp.servlet.Product_Servlet_Alter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductVisualizeServlet</servlet-name>
        <servlet-class>br.senac.sp.servlet.ProductVisualizeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterImage</servlet-name>
        <servlet-class>br.senac.sp.servlet.AlterImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadImageServlet</servlet-name>
        <url-pattern>/UploadImageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteImageServlet</servlet-name>
        <url-pattern>/DeleteImageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Servlet</servlet-name>
        <url-pattern>/Product_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Servlet_Save</servlet-name>
        <url-pattern>/Product_Servlet_Save</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductList_Servlet</servlet-name>
        <url-pattern>/ProductList_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Servlet_Alter</servlet-name>
        <url-pattern>/AlterarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductVisualizeServlet</servlet-name>
        <url-pattern>/ProductVisualizeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterImage</servlet-name>
        <url-pattern>/AlterImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
